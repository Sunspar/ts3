#!/bin/sh
### BEGIN INIT INFO
# Provides:          ts3-server
# Required-Start:    $local_fs $network
# Required-Stop:     $local_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: TeamSpeak 3 Server
# Description:       TeamSpeak 3 VoIP Server
### END INIT INFO

root_dir="<%= @install_dir %>"
daemon="${root_dir}/ts3server_startscript.sh"
inifile="${root_dir}/ts3server.ini"

case "$1" in
  start)
    ${daemon} start --inifile="${inifile}"
    ;;
  stop)
    ${daemon} stop
    ;;
  restart)
    ${daemon} restart
    ;;
  status)
    ${daemon} status
    ;;
  *)
    ${daemon} "$@"
esac
exit 0
