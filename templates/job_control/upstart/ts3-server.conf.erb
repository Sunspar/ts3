description "TeamSpeak 3 VoIP Server"
author "Andrew Turner <oraclesunspar@gmail.com>"
setuid <%= @user %>
expect
start on runlevel[2345]
stop on runlevel[06]
respawn
respawn limit 5 5
kill timeout 5
exec <%= File.join(@install_dir, 'ts3server_startscript.sh') %> start -inifile=<%= File.join @install_dir, 'ts3server.ini' %>
